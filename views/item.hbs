{{#extends 'base'}}

{{#block "content"}}
<h1>Items for sale</h1>
<a href="/item_record/create" class="btn btn-primary">Add New</a>

<table class="table">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Item Description</th>
            <th>Item Price</th>
            <th>Contact Info</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each itemRecords}}
        <tr>
            <td>
                {{this.itemName}}
            </td>
            <td>
                {{this.itemDesc}}
            </td>
            <td>
                {{this.itemPrice}}
            </td>
             <td>
                {{join this.contactInfo}}
            </td>
            <td>
                {{join this.category}}
            </td>
            <td>
                <a href="/item_record/{{this._id}}/update" class="btn btn-primary btn-sm">Edit</a>
                <a href="/item_record/{{this._id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                <a href="/item_record/{{this._id}}/reviews/add" class="btn btn-success btn-sm">Add new Note</a>
            </td>

        </tr>
        {{/each}}
    </tbody>

</table>

{{/block}}

{{/extends}}